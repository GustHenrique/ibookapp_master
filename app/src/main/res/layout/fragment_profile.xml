<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".fragments.FragmentProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoiBookCadastro"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="150dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ibooklogo"
            android:foregroundGravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iBook"
            android:textSize="22.5dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:foregroundGravity="center_horizontal"/>

        <Button
            android:id="@+id/btnLogoutHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_logut_foreground"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="@color/white"
            android:layout_gravity="left|center_vertical"/>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_38sdp"
        android:background="@color/colorTextPrimary"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/txtNomeUsuarioProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá Nome!"
            android:textSize="22.5dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <!--        circle image for profile image-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_person_24"
            app:civ_border_color="@color/colorTextPrimary"
            app:civ_border_width="@dimen/_1sdp" />

        <Button
            android:id="@+id/btneditdadosconta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_button"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Editar Dados da Conta"
            android:inputType="textLongMessage"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/btnLivrosFavoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_button"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Livros Favoritos"
            android:inputType="textLongMessage"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/btnLivrosCadastrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_button"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Livros Cadastrados"
            android:inputType="textLongMessage"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/btnMeusComentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_button"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Meus Comentários"
            android:inputType="textLongMessage"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>
</FrameLayout>