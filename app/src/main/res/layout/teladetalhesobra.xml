<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".telas.telaDetalhesObra">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp"
        android:gravity="top">

        <Button
            android:id="@+id/btnBackHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back_foreground"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="@color/white"
            android:layout_gravity="left|center_vertical"/>

        <ImageView
            android:id="@+id/logoiBookCadastroDetalheObra"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="150dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ibooklogo"
            android:foregroundGravity="center_horizontal"/>

        <TextView
            android:id="@+id/textViewDetalheObra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iBook"
            android:textSize="22.5dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:foregroundGravity="center_horizontal"/>

        <Button
            android:id="@+id/btnLogoutDetalhesObra"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_logut_foreground"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="@color/white"
            android:layout_gravity="left|center_vertical"/>
    </LinearLayout>


    <View
        android:id="@+id/viewDetalheObra"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_38sdp"
        android:background="@color/colorTextPrimary"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/ll0DetalheObra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewDetalheObra"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/background_search_field"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/ll1DetalheObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDetalheObra"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/imageview_border"
                android:src="@drawable/ic_book_foreground"
                app:civ_border_color="@color/colorTextPrimary"
                app:civ_border_width="@dimen/_1sdp" />

            <LinearLayout
                android:id="@+id/ll2DetalheObra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitleDetalheObra"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Nome da obra!"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txtAutorDetalheObra"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Autor da obra!"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3DetalheObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtAvarageRatingDetalheObra"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/background_button"
                android:padding="5dp"
                android:text="9.45"
                android:textColor="@color/white" />

            <RatingBar
                android:id="@+id/rbCadastroObraAvaliacaoDetalheObra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:backgroundTint="@color/dourada"
                android:progressBackgroundTint="@color/colorSecondary"
                android:progressTint="@color/dourada"
                android:rating="2.5"
                android:secondaryProgressTint="@color/dourada" />

            <Button
                android:id="@+id/favoritebookDetalheObra"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/ic_unsave_foreground"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblSinopseDetalheObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="Sinopse"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txtSinopseDetalheObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblSinopseDetalheObra"
            android:layout_marginTop="0dp"
            android:text="Aqui fica a sinopse!"
            android:textColor="@color/colorPrimary"
            android:textAlignment="viewStart" />

        <LinearLayout
            android:id="@+id/ll4DetalheObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblComentariosDetalheObra"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_1sdp"
                android:padding="5dp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/background_button_no_right"
                android:text="COMENTARIOS"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/lblEditDetalheObra"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_no_left"
                android:padding="5dp"
                android:textSize="@dimen/_14sdp"
                android:drawableLeft="@drawable/baseline_edit_24"
                android:drawablePadding="8dp"
                android:textColor="@color/colorTextPrimary" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtComentarDetalheObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/background_input_field_comment"
            android:hint="Deixe seu comentÃ¡rio..."
            android:inputType="textMultiLine"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorSecondary"
            android:textColorHint="@color/colorSecondary"
            android:textSize="@dimen/_12sdp"
            android:gravity="start|top"
            android:scrollbars="vertical" />

        <LinearLayout
            android:id="@+id/secondLinearLayoutDetalheObra"
            android:layout_below="@+id/firstLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rviBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/row_comment_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/ic_baseline_add_24"
        app:backgroundTint="@color/colorPrimary"
        app:pressedTranslationZ="@dimen/_10sdp"
        app:tint="@color/white" />
</RelativeLayout>