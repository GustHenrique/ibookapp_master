<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_input_field_comment"
    app:dragEdge="right"
    app:mode="same_level"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/personImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/baseline_person_black"
            app:civ_border_width="@dimen/_1sdp"
            android:layout_margin="@dimen/_5sdp"
            app:civ_border_color="@color/colorTextPrimary"
            android:padding="@dimen/_5sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="1dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nomePessoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome Pessoa -"
                    android:textColor="@color/colorSecondary"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/dataComentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Comentário"
                    android:textColor="@color/colorSecondary"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <TextView
                android:id="@+id/comentarioPessoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentário..."
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>