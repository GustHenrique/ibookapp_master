<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSecondary"
    tools:context=".fragments.FragmentEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoiBookCadastro"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="150dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ibooklogo"
            android:foregroundGravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iBook"
            android:textSize="22.5dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:foregroundGravity="center_horizontal"/>

        <Button
            android:id="@+id/btnLogoutHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_logut_foreground"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="@color/white"
            android:layout_gravity="left|center_vertical"/>
    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_38sdp"
        android:background="@color/colorTextPrimary"
        tools:layout_editor_absoluteX="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCadastroObra"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_book_foreground"
                app:civ_border_color="@color/colorTextPrimary"
                app:civ_border_width="@dimen/_1sdp" />

            <!--         editText for name input-->
            <EditText
                android:id="@+id/txtCadastroObraISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="ISBN"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <!--        editText for email input-->
            <EditText
                android:id="@+id/txtCadastroObraTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Título"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/txtCadastroObraEditora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Editora"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <!--        editText for note input-->
            <EditText
                android:id="@+id/txtCadastroObraAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Autor"
                android:inputType="textPersonName"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/txtCadastroObraCategorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Categorias"
                android:inputType="none"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />


            <EditText
                android:id="@+id/txtCadastroObraComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/baseline_password_24"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Comentário"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/txtCadastroObraSinopse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/baseline_password_24"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Sinopse"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <RatingBar
                android:id="@+id/rbCadastroObraAvaliacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/colorSecondary"
                android:progressBackgroundTint="@color/ofuscateblack"
                android:progressTint="@color/colorTextPrimary"
                android:rating="2.5"
                android:secondaryProgressTint="@color/colorSecondary" />

            <Button
                android:id="@+id/btnCadastroObraCadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Cadastrar"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>